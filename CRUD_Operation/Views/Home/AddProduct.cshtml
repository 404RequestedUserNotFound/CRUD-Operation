
@{
    ViewBag.Title = "AddProduct";
}

<h2>Add Product To Enventory</h2>

<form action="" method="post">

    Product Id:
    <input type="text" name="ProductId" placeholder="Enter the product id" class="form-control" />
    <br />

    Product Name:
    <input type="text" name="ProductName" placeholder="Enter the product name" class="form-control" />
    <br />

    Product Description:
    <input type="text" name="ProductDetails" placeholder="Enter the product details" class="form-control" />
    <br />

    Product Price:
    <input type="text" name="ProductPrice" placeholder="Enter the ammount of the product" class="form-control" />
    <br />

    <input type="submit" value="Add Product" class="btn btn-success" />
    <a href="~/Home/Index" class="btn btn-info">Product List</a>


</form>
