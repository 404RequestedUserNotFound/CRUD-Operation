
@{
    ViewBag.Title = "EditProduct";
}

<h2>Edit Product Details</h2>


<form action="" method="post">

    Product Id:
    <input type="text" name="ProductId" placeholder="Enter the product id" value="@Model.ProductId" class="form-control" />
    <br />

    Product Name:
    <input type="text" name="ProductName" placeholder="Enter the product name" value="@Model.ProductName" class="form-control" />
    <br />

    Product Description:
    <input type="text" name="ProductDetails" placeholder="Enter the product details" value="@Model.ProductDetails" class="form-control" />
    <br />

    Product Price:
    <input type="text" name="ProductPrice" placeholder="Enter the ammount of the product" value="@Model.ProductPrice" class="form-control" />
    <br />

    <input type="submit" value="Update Product" class="btn btn-warning" />
    <a href="~/Home/Index" class="btn btn-info">Product List</a>

</form>

